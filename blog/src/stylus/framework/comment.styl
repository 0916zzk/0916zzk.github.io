.panel-body
    display: flex
    flex-direction: column
.blog-comment-input
    border 0
    font-size: font-base-size
    outline: 0
    padding: white-space
    resize: none
.blog-comment-submit    
    text-align: center
    border-top: 1px solid bg-motify-color 
    color bg-theme-color 
    &:hover
        color: bg-motify-color

.blog-comment-item
    background-color:#f5f5f5
    margin: white-space 0
    padding: 0 white-space
.blog-comment-user
    height: 50px
    display: flex
    align-items: center
    border-bottom: 1px solid bg-motify-color 
    .blog-comment-avarar
        overflow: hidden
        height: 40px
        width 40px
        border-radius: 50%
        margin-right: white-space
.blog-comment-info
    margin: white-space 0
    padding: 0 white-space
    font-size: font-base-size
.blog-comment-time
    text-align: end
    padding: 0 white-space