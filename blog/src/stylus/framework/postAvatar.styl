.blog-modify
    display: flex
    flex-direction: column
    align-items: center
    justify-content: space-between
    height: 450px
    padding-top: 30px
.blog-modify-avatar
    width 300px
    height: 300px
    border-radius: 50%
    overflow:hidden
    border: 1px solid bg-motify-color
.blog-modify-input
    display: flex
    justify-content: center
    p
        cursor pointer
        padding: white-space
        border: 1px solid bg-motify-color
        color: white
        background-color: bg-theme-color
        &:hover
            background-color: bg-motify-color
            transform: scale(1.02)
    input 
        display: none
.blog-modify-submit
    padding: white-space 2*white-space 
